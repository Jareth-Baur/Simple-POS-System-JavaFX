<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.LoginController"
            prefWidth="400" prefHeight="500"
            styleClass="auth-pane">

    <VBox alignment="CENTER" layoutX="50" layoutY="100" prefWidth="300" styleClass="auth-box">
        <Label text="POS System Login" styleClass="auth-title" />

        <TextField fx:id="emailField" promptText="Email" styleClass="text-input" />
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-input" />

        <Button text="Login" onAction="#handleLogin" styleClass="auth-button" />

        <Hyperlink text="Donâ€™t have an account? Register"
                   onAction="#switchToRegister"
                   styleClass="auth-link" />
    </VBox>
</AnchorPane>