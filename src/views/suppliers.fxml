<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.SuppliersController"
            prefWidth="900" prefHeight="650"
            styleClass="page-pane">

    <VBox spacing="15" alignment="TOP_CENTER" styleClass="card">

        <Label text="ðŸ­ Supplier Management" styleClass="label-header"/>

        <!-- TABLE -->
        <TableView fx:id="table" prefHeight="300">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="180"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="180"/>
                <TableColumn fx:id="colPhone" text="Phone" prefWidth="140"/>
                <TableColumn fx:id="colAddress" text="Address" prefWidth="220"/>
            </columns>
        </TableView>

        <!-- FORM -->
        <HBox spacing="10">
            <TextField fx:id="nameField" promptText="Supplier Name"/>
            <TextField fx:id="emailField" promptText="Email"/>
            <TextField fx:id="phoneField" promptText="Phone"/>
            <TextField fx:id="addressField" promptText="Address"/>
        </HBox>

        <!-- ACTIONS -->
        <HBox spacing="10">
            <Button text="Add" onAction="#handleAdd" styleClass="btn-green"/>
            <Button text="Update" onAction="#handleUpdate" styleClass="btn-blue"/>
            <Button text="Delete" onAction="#handleDelete" styleClass="btn-red"/>
            <Button text="Clear" onAction="#handleClear" styleClass="btn-gray"/>
        </HBox>

    </VBox>
</AnchorPane>