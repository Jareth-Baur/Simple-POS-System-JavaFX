<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ReportsController"
            prefWidth="900"
            prefHeight="600"
            styleClass="page-pane">

    <VBox spacing="20" alignment="TOP_CENTER" styleClass="card">

        <Label text="ðŸ“Š Sales Reports" styleClass="label-header"/>

        <HBox spacing="10">
            <Label text="View:"/>
            <ChoiceBox fx:id="reportType" prefWidth="120"/>
            <Button text="Generate" onAction="#handleGenerateReport"
                    styleClass="btn-blue"/>
            <Button text="Export CSV" onAction="#handleExportCSV"
                    styleClass="btn-green"/>
            <Button text="Export PDF" onAction="#handleExportPDF"
                    styleClass="btn-red"/>
        </HBox>

        <TableView fx:id="salesTable" prefHeight="350">
            <columns>
                <TableColumn fx:id="colId" text="Sale ID" prefWidth="80"/>
                <TableColumn fx:id="colProduct" text="Product" prefWidth="200"/>
                <TableColumn fx:id="colQuantity" text="Qty" prefWidth="80"/>
                <TableColumn fx:id="colTotal" text="Subtotal" prefWidth="120"/>
                <TableColumn fx:id="colDate" text="Date" prefWidth="180"/>
            </columns>
        </TableView>

        <HBox spacing="40" alignment="CENTER_RIGHT">
            <Label fx:id="totalSalesLabel" text="Total Sales: â‚±0.00"
                   styleClass="summary-green"/>
            <Label fx:id="transactionCountLabel" text="Transactions: 0"
                   styleClass="summary-blue"/>
        </HBox>

    </VBox>
</AnchorPane>
