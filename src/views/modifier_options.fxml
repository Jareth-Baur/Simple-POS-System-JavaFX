<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ModifierOptionsController"
            styleClass="page-pane"
            stylesheets="@/styles/base.css,@/styles/components.css">
    
    <VBox spacing="15" alignment="TOP_CENTER" styleClass="card">

        <Label text="ðŸ”˜ Modifier Options" styleClass="label-header"/>

        <TableView fx:id="table" prefHeight="300">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colModifier" text="Modifier" prefWidth="220"/>
                <TableColumn fx:id="colName" text="Option" prefWidth="200"/>
                <TableColumn fx:id="colPrice" text="Price" prefWidth="100"/>
            </columns>
        </TableView>

        <HBox spacing="10">
            <ComboBox fx:id="modifierBox" promptText="Modifier" styleClass="form-combo"/>
            <TextField fx:id="nameField" promptText="Option Name"/>
            <TextField fx:id="priceField" promptText="Price"/>
        </HBox>

        <HBox spacing="10">
            <Button text="Add" onAction="#handleAdd" styleClass="btn-green"/>
            <Button text="Update" onAction="#handleUpdate" styleClass="btn-blue"/>
            <Button text="Delete" onAction="#handleDelete" styleClass="btn-red"/>
            <Button text="Clear" onAction="#handleClear" styleClass="btn-gray"/>
        </HBox>
    </VBox>
</AnchorPane>

