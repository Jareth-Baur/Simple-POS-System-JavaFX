<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.VariantsController"
            prefWidth="900" prefHeight="650"
            styleClass="page-pane">

    <VBox spacing="15" alignment="TOP_CENTER" styleClass="card">

        <Label text="ðŸ§© Product Variants" styleClass="label-header"/>

        <!-- TABLE -->
        <TableView fx:id="table" prefHeight="300">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colProduct" text="Product" prefWidth="200"/>
                <TableColumn fx:id="colName" text="Variant Name" prefWidth="160"/>
                <TableColumn fx:id="colSku" text="SKU" prefWidth="120"/>
                <TableColumn fx:id="colBarcode" text="Barcode" prefWidth="140"/>
                <TableColumn fx:id="colPrice" text="Price" prefWidth="90"/>
                <TableColumn fx:id="colStock" text="Stock" prefWidth="80"/>
            </columns>
        </TableView>

        <!-- FORM ROW 1 -->
        <HBox spacing="10">
            <ComboBox fx:id="productBox" promptText="Product" styleClass="form-combo"/>
            <TextField fx:id="nameField" promptText="Variant Name"/>
            <TextField fx:id="skuField" promptText="SKU"/>
            <TextField fx:id="barcodeField" promptText="Barcode"/>
        </HBox>

        <!-- FORM ROW 2 -->
        <HBox spacing="10">
            <TextField fx:id="priceField" promptText="Price"/>
            <TextField fx:id="stockField" promptText="Stock"/>
        </HBox>

        <!-- ACTIONS -->
        <HBox spacing="10">
            <Button text="Add" onAction="#handleAdd" styleClass="btn-green"/>
            <Button text="Update" onAction="#handleUpdate" styleClass="btn-blue"/>
            <Button text="Delete" onAction="#handleDelete" styleClass="btn-red"/>
            <Button text="Clear" onAction="#handleClear" styleClass="btn-gray"/>
        </HBox>

    </VBox>
</AnchorPane>
