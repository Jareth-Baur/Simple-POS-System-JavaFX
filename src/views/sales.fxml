<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.SalesController"
            prefWidth="900" prefHeight="600"
            styleClass="page-pane">

   <VBox alignment="TOP_CENTER" spacing="20" prefWidth="780" layoutX="10" layoutY="10"
          styleClass="card">
        <Label text="ðŸ’µ Point of Sale" styleClass="label-header" />

        <HBox spacing="20">
            <!-- Product List -->
            <VBox spacing="10">
                <Label text="Available Products" style="-fx-font-size: 16px;" />
                <TableView fx:id="productTable" prefWidth="400" prefHeight="400">
                    <columns>
                        <TableColumn fx:id="colProdId" text="ID" prefWidth="50" />
                        <TableColumn fx:id="colProdName" text="Product" prefWidth="200" />
                        <TableColumn fx:id="colProdPrice" text="Price" prefWidth="100" />
                    </columns>
                </TableView>
                <HBox spacing="10">
                    <TextField fx:id="quantityField" promptText="Quantity" prefWidth="80" />
                    <Button text="Add to Cart" onAction="#handleAddToCart"
                            styleClass="btn-blue"  />
                </HBox>
            </VBox>

            <!-- Cart -->
            <VBox spacing="10">
                <Label text="Cart" style="-fx-font-size: 16px;" />
                <TableView fx:id="cartTable" prefWidth="400" prefHeight="400">
                    <columns>
                        <TableColumn fx:id="colCartName" text="Product" prefWidth="180" />
                        <TableColumn fx:id="colCartQty" text="Qty" prefWidth="60" />
                        <TableColumn fx:id="colCartTotal" text="Total" prefWidth="100" />
                    </columns>
                </TableView>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Label text="Total: â‚±" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                    <Label fx:id="totalLabel" text="0.00"
                           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #28a745;" />
                </HBox>

                <HBox spacing="10">
                    <Button text="Remove Item" onAction="#handleRemove"
                            styleClass="btn-red"/>
                    <Button text="Checkout" onAction="#handleCheckout"
                            styleClass="btn-green"/>
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
