<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.SalesController"
            prefWidth="900" prefHeight="600"
            styleClass="page-pane">

    <VBox spacing="20" alignment="TOP_CENTER" styleClass="card">

        <Label text="ðŸ’µ Point of Sale" styleClass="label-header"/>

        <HBox spacing="20">

            <!-- Products -->
            <VBox spacing="10">
                <Label text="Available Products"/>
                <TableView fx:id="productTable" prefWidth="400" prefHeight="350">
                    <columns>
                        <TableColumn fx:id="colProdId" text="ID" prefWidth="60"/>
                        <TableColumn fx:id="colProdName" text="Product" prefWidth="220"/>
                        <TableColumn fx:id="colProdPrice" text="Price" prefWidth="100"/>
                    </columns>
                </TableView>

                <HBox spacing="10">
                    <TextField fx:id="quantityField" promptText="Qty" prefWidth="80"/>
                    <Button text="Add to Cart" onAction="#handleAddToCart" styleClass="btn-blue"/>
                </HBox>
            </VBox>

            <!-- Cart -->
            <VBox spacing="10">
                <Label text="Cart"/>
                <TableView fx:id="cartTable" prefWidth="400" prefHeight="350">
                    <columns>
                        <TableColumn fx:id="colCartName" text="Product" prefWidth="200"/>
                        <TableColumn fx:id="colCartQty" text="Qty" prefWidth="80"/>
                        <TableColumn fx:id="colCartSubtotal" text="Subtotal" prefWidth="120"/>
                    </columns>
                </TableView>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Label text="Total â‚±"/>
                    <Label fx:id="totalLabel" text="0.00" styleClass="total-text"/>
                </HBox>

                <HBox spacing="10">
                    <Button text="Remove" onAction="#handleRemove" styleClass="btn-red"/>
                    <Button text="Checkout" onAction="#handleCheckout" styleClass="btn-green"/>
                </HBox>
            </VBox>

        </HBox>
    </VBox>
</AnchorPane>
