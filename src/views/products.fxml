<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ProductsController"
            prefWidth="700" prefHeight="600"
            styleClass="page-pane">

    <VBox alignment="TOP_CENTER" spacing="20" prefWidth="780" layoutX="10" layoutY="10"
          styleClass="card">
        <Label text="ðŸ› Product Management" styleClass="label-header" />

        <TableView fx:id="productTable" prefHeight="300">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50" />
                <TableColumn fx:id="colName" text="Name" prefWidth="200" />
                <TableColumn fx:id="colPrice" text="Price" prefWidth="100" />
                <TableColumn fx:id="colStock" text="Stock" prefWidth="100" />
            </columns>
        </TableView>

        <HBox spacing="15">
            <TextField fx:id="nameField" promptText="Product Name" prefWidth="220" />
            <TextField fx:id="priceField" promptText="Price" prefWidth="120" />
            <TextField fx:id="stockField" promptText="Stock" prefWidth="120" />
        </HBox>

        <HBox spacing="15">
            <Button text="Add" onAction="#handleAdd" styleClass="btn-green" />
            <Button text="Update" onAction="#handleUpdate" styleClass="btn-blue" />
            <Button text="Delete" onAction="#handleDelete" styleClass="btn-red" />
            <Button text="Clear" onAction="#handleClear" styleClass="btn-gray" />

        </HBox>
    </VBox>

</AnchorPane>
