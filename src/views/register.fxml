<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.RegisterController"
            prefWidth="400" prefHeight="550"
            stylesheets="@/styles/auth.css"
            styleClass="auth-pane">

    <VBox alignment="CENTER" layoutX="50" layoutY="120" prefWidth="300"
          styleClass="auth-box">

        <Label text="Create Account" styleClass="auth-title"/>

        <TextField fx:id="emailField" promptText="Email" styleClass="text-input"/>
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-input"/>

        <Button text="Register"
        onAction="#handleRegister"
        styleClass="auth-button"
        defaultButton="true"/>


        <Hyperlink text="Already have an account? Login"
                   onAction="#switchToLogin"
                   styleClass="auth-link"/>
    </VBox>
</AnchorPane>
